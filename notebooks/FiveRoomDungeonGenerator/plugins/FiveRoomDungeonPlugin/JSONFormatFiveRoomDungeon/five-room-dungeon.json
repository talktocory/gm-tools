{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Five Room Dungeon Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "introduction": {
      "type": "string"
    },
    "plot_twist": {
      "type": "string"
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "room_number": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "objective": {
            "type": "string"
          },
          "design": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "room_number",
          "title",
          "gm_description",
          "player_description",
          "objective",
          "design",
          "challenge"
        ]
      }
    }
  },
  "required": [
    "title",
    "introduction",
    "plot_twist",
    "rooms"
  ]
}