{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Non-Player Character (NPC) Schema",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "appearance": {
        "type": "string"
      },
      "personality": {
        "type": "string"
      },
      "role": {
        "type": "string"
      }
    },
    "required": ["name", "appearance", "personality", "role"]
  }
  